{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "not-rely-on-time": "off",
    "compiler-version": ["error", "^0.8.13"],
    "func-visibility": ["warn",{"ignoreConstructors":true}]
  },
  "plugins": ["prettier"]
}
